{% extends 'base.html.twig' %}

		{% block title %}
			Actors
		{% endblock %}

		{% block body %}
			<h1>
				Actors
			</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>
							Id
						</th>
						<td>
							{{ actor.id }}
						</td>
					</tr>
					<tr>
						<th>
							Name
						</th>
						<td>
							{{ actor.name }}
						</td>
					</tr>
					<tr>
						<th>
							Birthdate
						</th>
						<td>
							{{ actor.birthdate ? actor.birthdate|date('Y-m-d') : '' }}
						</td>
					</tr>
					<tr>
						<th>
							Deathdate
						</th>
						<td>
							{{ actor.deathdate ? actor.deathdate|date('Y-m-d') : '' }}
						</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('app_actors') }}">
				back to list
			</a>

			<a href="{{ path('app_actors_edit', {'id': actor.id}) }}">
				edit
			</a>

			{{ include('actors/_delete_form.html.twig') }}
		{% endblock %}
