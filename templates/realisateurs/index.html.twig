{% extends 'base.html.twig' %}

{% block title %}Realisateurs index{% endblock %}

{% block body %}
    <h1>Realisateurs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Birthdate</th>
                <th>Deathdate</th>
                <th>Genre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisateur in realisateurs %}
            <tr>
                <td>{{ realisateur.id }}</td>
                <td>{{ realisateur.name }}</td>
                <td>{{ realisateur.birthdate ? realisateur.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ realisateur.deathdate ? realisateur.deathdate|date('Y-m-d') : '' }}</td>
                <td>{{ realisateur.genre }}</td>
                <td>
                    <a href="{{ path('app_realisateurs_show', {'id': realisateur.id}) }}">show</a>
                    <a href="{{ path('app_realisateurs_edit', {'id': realisateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_realisateurs_new') }}">Create new</a>
{% endblock %}
