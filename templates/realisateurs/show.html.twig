{% extends 'base.html.twig' %}

		{% block title %}
			Realisateurs
		{% endblock %}

		{% block body %}
			<h1>
				Realisateurs
			</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>
							Id
						</th>
						<td>
							{{ realisateur.id }}
						</td>
					</tr>
					<tr>
						<th>
							Name
						</th>
						<td>
							{{ realisateur.name }}
						</td>
					</tr>
					<tr>
						<th>
							Birthdate
						</th>
						<td>
							{{ realisateur.birthdate ? realisateur.birthdate|date('Y-m-d') : '' }}
						</td>
					</tr>
					<tr>
						<th>
							Deathdate
						</th>
						<td>
							{{ realisateur.deathdate ? realisateur.deathdate|date('Y-m-d') : '' }}
						</td>
					</tr>
					<tr>
						<th>
							Genre
						</th>
						<td>
							{{ realisateur.genre }}
						</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('app_realisateurs') }}">
				back to list
			</a>

			<a href="{{ path('app_realisateurs_edit', {'id': realisateur.id}) }}">
				edit
			</a>

			{{ include('realisateurs/_delete_form.html.twig') }}
		{% endblock %}
